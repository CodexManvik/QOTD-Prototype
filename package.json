{
  "name": "qotd-api",
  "version": "1.0.0",
  "description": "Question of the Day API",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "node src/main.js",
